<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/buttonQR"
        android:layout_width="219dp"
        android:layout_height="71dp"
        android:layout_marginTop="32dp"
        android:background="#ff8910"
        android:padding="30px"
        android:text="QR-Code scannen"
        android:textColor="#fff"
        android:textSize="18sp"
        android:onClick="ButtonQR_Click"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewGueltigkeit" />

    <Button
        android:id="@+id/buttonCode"
        android:layout_width="219dp"
        android:layout_height="71dp"
        android:layout_marginTop="32dp"
        android:background="#ff8910"
        android:padding="30px"
        android:text="Code eingeben"
        android:textColor="#fff"
        android:textSize="18sp"
        android:onClick="ButtonCode_Click"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/buttonQR"
        tools:text="Code eingeben" />

    <TextView
        android:id="@+id/textViewGueltigkeit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginTop="24dp"
        android:text="Überprüfen Sie die Gültigkeit der Gutscheine"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="100dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.494"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/gutschein" />

</androidx.constraintlayout.widget.ConstraintLayout>